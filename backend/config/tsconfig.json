{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "outDir": "../dist",
    "rootDir": "../src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "baseUrl": "../src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": ["../src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 