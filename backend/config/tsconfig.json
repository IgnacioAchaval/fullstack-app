{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "../dist",
    "rootDir": "../src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true
  },
  "include": ["../src/**/*"],
  "exclude": ["node_modules", "dist"]
} 